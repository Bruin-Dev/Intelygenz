{
  "name": "automation-engine",
  "version": "1.0.0",
  "description": "Lerna automation-engine monorepo configuration",
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "bootstrap": "npx lerna bootstrap --use-workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.intelygenz.com:mettel/automation-engine.git"
  },
  "keywords": [
    "lerna",
    "automation-engine"
  ],
  "author": "angel.costales@intelygenz.com",
  "license": "ISC",
  "dependencies": {
    "lerna": "4.0.0",
    "multi-semantic-release": "2.13.0",
    "semantic-release": "^17.4.7",
    "@semantic-release/gitlab": "6.2.2"
  },
  "resolutions": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "release": {
    "branches": "master",
    "success": false,
    "fail": false,
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "releaseRules": [
            {
              "type": "refactor",
              "release": "minor"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular"
        }
      ],
      [
        "@semantic-release/gitlab", 
        {
          "gitlabUrl": "https://gitlab.intelygenz.com"
        }
      ]
    ]
  },
  "workspaces": [
    "./services",
    "./services/bruin-bridge",
    "./services/customer-cache",
    "./services/digi-bridge",
    "./services/digi-reboot-report",
    "./services/dri-bridge",
    "./services/email-tagger-kre-bridge",
    "./services/email-tagger-monitor",
    "./services/fraud-monitor",
    "./services/gateway-monitor",
    "./services/hawkeye-affecting-monitor",
    "./services/hawkeye-bridge",
    "./services/hawkeye-customer-cache",
    "./services/hawkeye-outage-monitor",
    "./services/intermapper-outage-monitor",
    "./services/last-contact-report",
    "./services/links-metrics-api",
    "./services/links-metrics-collector",
    "./services/lumin-billing-report",
    "./services/notifier",
    "./services/notifications-bridge",
    "./services/repair-tickets-kre-bridge",
    "./services/repair-tickets-monitor",
    "./services/service-affecting-monitor",
    "./services/service-outage-monitor",
    "./services/servicenow-bridge",
    "./services/t7-bridge",
    "./services/ticket-collector",
    "./services/ticket-statistics",
    "./services/tnba-feedback",
    "./services/tnba-monitor",
    "./services/velocloud-bridge"
  ]
}
