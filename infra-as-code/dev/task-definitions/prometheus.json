[
  {
    "name": "metrics-prometheus",
    "image": "${prometheus_image}",
    "portMappings": [
      {
        "containerPort": ${prometheus_HTTP_PORT},
        "hostPort": ${prometheus_HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${prometheus_HTTP_PORT}/-/healthy -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "mountPoints": [
        {
          "sourceVolume": "${prometheus_storage_volume_name}",
          "containerPath": "${prometheus_storage_container_path}"
        }
    ],
    "command": ["--config.file=/etc/prometheus/prometheus.yml",
                "--storage.tsdb.path=${prometheus_storage_container_path}",
                "--storage.tsdb.retention.time=${prometheus_tsdb_retention_time}",
                "--storage.tsdb.min-block-duration=${prometheus_tsdb_block_duration}",
                "--storage.tsdb.max-block-duration=${prometheus_tsdb_block_duration}"],
    "environment": []
  },
  {
    "name": "metrics-thanos-sidecar",
    "image": "${thanos_sidecar_image}",
    "portMappings": [
      {
        "containerPort": ${thanos_sidecar_GRPC_PORT},
        "hostPort": ${thanos_sidecar_GRPC_PORT}
      },
      {
        "containerPort": ${thanos_sidecar_HTTP_PORT},
        "hostPort": ${thanos_sidecar_HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${thanos_sidecar_HTTP_PORT}/-/ready -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "mountPoints": [
        {
          "sourceVolume": "${prometheus_storage_volume_name}",
          "containerPath": "${prometheus_storage_container_path}"
        }
    ],
    "command": ["sidecar",
                "--tsdb.path=${prometheus_tsdb_path}",
                "--prometheus.url=http://localhost:${prometheus_HTTP_PORT}",
                "--objstore.config-file=${thanos_sidecar_objstore_config_file}",
                "--grpc-address=localhost:${thanos_sidecar_GRPC_PORT}",
                "--http-address=localhost:${thanos_sidecar_HTTP_PORT}"],
    "dependsOn": [
      {
          "containerName": "metrics-prometheus",
          "condition": "HEALTHY"
      }
    ]
  },
  {
    "name": "metrics-thanos-store-gateway",
    "image": "${thanos_store_gateway_image}",
    "portMappings": [
      {
        "containerPort": ${thanos_store_gateway_GRPC_PORT},
        "hostPort": ${thanos_store_gateway_GRPC_PORT}
      },
      {
        "containerPort": ${thanos_store_gateway_HTTP_PORT},
        "hostPort": ${thanos_store_gateway_HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${thanos_store_gateway_HTTP_PORT}/-/ready -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "command": ["store",
                "--data-dir=/thanos/store",
                "--objstore.config-file=${thanos_store_gateway_objstore_config_file}",
                "--http-address=localhost:${thanos_store_gateway_HTTP_PORT}",
                "--grpc-address=localhost:${thanos_store_gateway_GRPC_PORT}"],
    "dependsOn": [
      {
          "containerName": "metrics-prometheus",
          "condition": "HEALTHY"
      }
    ]
  },
  {
    "name": "metrics-thanos-querier",
    "image": "${thanos_querier_image}",
    "portMappings": [
      {
        "containerPort": ${thanos_querier_GRPC_PORT},
        "hostPort": ${thanos_querier_GRPC_PORT}
      },
      {
        "containerPort": ${thanos_querier_HTTP_PORT},
        "hostPort": ${thanos_querier_HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${thanos_querier_HTTP_PORT}/-/ready -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "command": ["query",
                "--http-address=localhost:${thanos_querier_HTTP_PORT}",
                "--grpc-address=localhost:${thanos_querier_GRPC_PORT}",
                "--store=localhost:${thanos_sidecar_GRPC_PORT}",
                "--store=localhost:${thanos_store_gateway_GRPC_PORT}"],
    "dependsOn": [
      {
          "containerName": "metrics-prometheus",
          "condition": "HEALTHY"
      },
      {
          "containerName": "metrics-thanos-sidecar",
          "condition": "HEALTHY"
      },
      {
          "containerName": "metrics-thanos-store-gateway",
          "condition": "HEALTHY"
      }
    ]
  },
  {
    "name": "grafana",
    "image": "${grafana_image}",
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:3000/api/health -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "environment": [
      {
        "name": "NATS_SERVER1",
        "value": "${NATS_SERVER1}"
      },
      {
        "name": "REDIS_HOSTNAME",
        "value": "${REDIS_HOSTNAME}"
      },
      {
        "name": "PAPERTRAIL_ACTIVE",
        "value": "${PAPERTRAIL_ACTIVE}"
      },
      {
        "name": "PAPERTRAIL_HOST",
        "value": "${PAPERTRAIL_HOST}"
      },
      {
        "name": "PAPERTRAIL_PORT",
        "value": "${PAPERTRAIL_PORT}"
      },
      {
        "name": "PAPERTRAIL_PREFIX",
        "value": "${PAPERTRAIL_PREFIX}"
      },
      {
        "name": "ENVIRONMENT_NAME",
        "value": "${ENVIRONMENT_NAME}"
      }
    ],
    "dependsOn": [
      {
          "containerName": "metrics-prometheus",
          "condition": "HEALTHY"
      },
      {
          "containerName": "metrics-thanos-sidecar",
          "condition": "HEALTHY"
      },
      {
          "containerName": "metrics-thanos-store-gateway",
          "condition": "HEALTHY"
      },
      {
          "containerName": "metrics-thanos-querier",
          "condition": "HEALTHY"
      }
    ]
  }
]
