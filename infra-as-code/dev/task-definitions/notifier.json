[
  {
    "name": "notifier",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 5000,
        "hostPort": 5000
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:5000/_health || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "environment": [
      {
        "name": "PYTHONUNBUFFERED",
        "value": "${PYTHONUNBUFFERED}"
      },
      {
        "name": "NATS_SERVER1",
        "value": "${NATS_SERVER1}"
      },
      {
        "name": "SLACK_URL",
        "value": "${SLACK_URL}"
      },
      {
        "name": "EMAIL_ACC_PWD",
        "value": "${EMAIL_ACC_PWD}"
      }
    ]
  }
]
