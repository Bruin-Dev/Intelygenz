[
  {
    "name": "velocloud_drone",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 5000,
        "hostPort": 5000
      },
      {
        "containerPort": 9090,
        "hostPort": 9090
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "environment": [
      {
        "name": "PYTHONUNBUFFERED",
        "value": "${PYTHONUNBUFFERED}"
      },
      {
        "name": "NATS_SERVER1",
        "value": "${NATS_SERVER1}"
      },
      {
        "name": "NATS_CLUSTER_NAME",
        "value": "${NATS_CLUSTER_NAME}"
      },
      {
        "name": "VELOCLOUD_CREDENTIALS",
        "value": "${VELOCLOUD_CREDENTIALS}"
      },
      {
        "name": "VELOCLOUD_VERIFY_SSL",
        "value": "${VELOCLOUD_VERIFY_SSL}"
      }
    ]
  }
]
