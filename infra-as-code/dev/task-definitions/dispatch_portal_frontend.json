[
  {
    "name": "dispatch-portal-frontend",
    "image": "${dispatch_portal_frontend_image}",
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:3000 || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    }
  },
  {
    "name": "dispatch-portal-frontend-nginx",
    "image": "${dispatch_portal_frontend_nginx_image}",
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:8080/health-check && nc -vz dispatch-portal-backend-${ENVIRONMENT}.${ENVIRONMENT}.local 5000 || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "dependsOn": [
      {
          "containerName": "dispatch-portal-frontend",
          "condition": "HEALTHY"
      }
    ],
    "environment": [
      {
        "name": "CURRENT_ENVIRONMENT",
        "value": "${CURRENT_ENVIRONMENT}"
      },
      {
        "name": "ENVIRONMENT_NAME",
        "value": "${ENVIRONMENT_NAME}"
      },
      {
        "name": "PAPERTRAIL_HOST",
        "value": "${PAPERTRAIL_HOST}"
      },
      {
        "name": "PAPERTRAIL_PORT",
        "value": "${PAPERTRAIL_PORT}"
      },
      {
        "name": "ENVIRONMENT",
        "value": "${ENVIRONMENT}"
      },
      {
        "name": "BUILD_NUMBER",
        "value": "${BUILD_NUMBER}"
      }
    ]
  }
]
