[
  {
    "name": "metrics-thanos-store-gateway",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": ${GRPC_PORT},
        "hostPort": ${GRPC_PORT}
      },
      {
        "containerPort": ${HTTP_PORT},
        "hostPort": ${HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${HTTP_PORT}/-/ready -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "command": ["store",
                "--data-dir=/thanos/store",
                "--objstore.config-file=/tmp/bucket_config.yaml",
                "--http-address=localhost:${HTTP_PORT}",
                "--grpc-address=localhost:${GRPC_PORT}"]
  }
]
