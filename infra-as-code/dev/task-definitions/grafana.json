[
  {
    "name": "grafana",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": 3000,
        "hostPort": 3000
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:3000/ || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "environment": [
      {
        "name": "GF_SECURITY_ADMIN_PASSWORD",
        "value": "${GF_SECURITY_ADMIN_PASSWORD}"
      }]
  }
]
