[
  {
    "name": "metrics-thanos-querier",
    "image": "${image}",
    "portMappings": [
      {
        "containerPort": ${HTTP_PORT},
        "hostPort": ${HTTP_PORT}
      }
    ],
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "${log_prefix}"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "wget http://localhost:${HTTP_PORT}/-/ready -O index || exit 1"
      ],
      "interval": 30,
      "retries": 3,
      "startPeriod": 30,
      "timeout": 5
    },
    "command": ["query",
                "--http-address=localhost:${HTTP_PORT}",
                "--store=${thanos_store_gateway_url}:10901"]
  }
]
