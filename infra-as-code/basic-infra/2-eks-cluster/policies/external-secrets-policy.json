{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "secretsmanager:*",
        "ssm:*",
        "kms:*"
      ],
      "Resource": [
        "arn:aws:secretsmanager:us-east-1:${account_id}:*",
        "arn:aws:ssm:us-east-1:${account_id}:*",
        "arn:aws:kms:us-east-1:${account_id}:*"
      ]
    }
  ]
}